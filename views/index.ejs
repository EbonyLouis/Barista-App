<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Barista</title>
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>

    <section class="login">
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input class="log" type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="log"  type="password" class="form-control" name="password">
              <button type="submit" class="btn btn-warning btn-lg">Login</button>
              <a href="/signup">Barista SignUp</a>
        </div>

    </form>
  </section>

   <h1>The Gardner Roasting Co.</h1>
    <form class="" action="/order" method="POST">
      <input class="orderPlace" type="text" name="customer" placeholder="Name of Customer">
      <input class="orderPlace" type="text" name="drink" placeholder="Order">
      <button type="submit" name="button">Place Order</button>
    </form>

  </body>
</html>
